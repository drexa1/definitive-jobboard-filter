{
  "manifest_version": 3,
  "name": "Jobgether Company Filter",
  "version": "1.0.0",
  "description": "Enhance your Jobgether search experience by filtering out unwanted companies.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://jobgether.com/search-offers*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}