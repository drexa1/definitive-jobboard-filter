{
  "manifest_version": 3,
  "name": "Job Filter",
  "version": "1.0.0",
  "description": "Enhance your Jobgether search experience by filtering out unwanted companies.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}